<section id="menu">
	<div class="container-fluid position-relative">
		<div class="row">
			<div class="col-12 col-lg-3 p-0">
				<nav class="menu-nav">
					<ul>
						{{#each categories}}
						<li><a href="#{{this.slug}}">{{this.name}}</a></li>
						{{/each}}
					</ul>
				</nav>
			</div>
			<div class="row col-12 col-lg-9 p-0">
				<div class="col-12 col-md-8 p-0">
					<div class="menu-list">
						<div class="menu-list__search">
							<input type="text" placeholder="Tìm món" />
							<img src="/images/icon-search.png" alt="search" />
						</div>
						<div class="menu-list__group">
							{{#each categories}}
							<div class="menu-list__group__items" id="{{this.slug}}">
								<h3>{{this.name}}</h3>
								<ul>
									{{#each products}}
									<li>
										<div class="row">
											<div class="col-6  col-md-2">
												<div class="item-logo">
													<img src="{{this.image}}" alt="{{this.name}}" />
												</div>
											</div>
											<div class="col-6 col-md-6">
												<div class="item-description">
													<h3>
														{{this.name}}
													</h3>
													<h4>
														{{this.description}}
													</h4>
												</div>
											</div>
											<div class="col-6 col-md-2">
												<div class="item-price">
													{{this.price}}đ
												</div>
											</div>
											<div class="col-6 col-md-2">
												<div class="item-quantity">
													<i class="fa-solid fa-minus"></i>
													<input type="number" value="1" min="0" />
													<i class="fa-solid fa-plus"></i>
												</div>
											</div>
										</div>
									</li>
									{{/each}}
								</ul>
							</div>
							{{/each}}
						</div>
					</div>
					<div class="col-12 col-md-4">
						<div class="menu-book">
							<span>15 phần -
								<span class="menu-book-btn" data-toggle="modal" data-target="#paymentDetailModal">Chi tiết</span></span>
							<span>Tổng cộng: 199.000đ</span>
							<button class="btn-default" data-toggle="modal" data-target="#paymentModal">
								Đặt ngay
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	</div>
	</div>
</section>
