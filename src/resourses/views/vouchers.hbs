<div id="admin_dashboard__content" class="col-lg-9">
	<div id="filter_bar">
		<h4 class="filter_heading">Danh sách khuyến mãi</h4>
		<div class="row filter_row">
			<div class="btn-group">
				<button type="button" class="btn dropdown_placeholder">Trạng thái</button>
				<button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-toggle="dropdown"
					aria-haspopup="true" aria-expanded="false">
					<span class="sr-only">Toggle Dropdown</span>
				</button>
				<div class="dropdown-menu dropdown-menu-right filter_dropdown">
					<a class="dropdown-item" href="#">Hoạt động</a>
					<a class="dropdown-item" href="#">Hết hạn</a>
				</div>
			</div>
			<input class="filter_input btn" type="text" placeholder="Nhập tên để tìm kiếm">
			<button type="button" class="btn btn-outline filter_button" data-toggle="modal" data-target="#createDiscount">+
				Thêm khuyến mãi</button>
		</div>
	</div>

	<div id="list_staff">
		<table class="table  table-striped table-hover">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Mã</th>
					<th scope="col">Còn lại</th>
					<th scope="col">Ngày bắt đầu</th>
					<th scope="col">Ngày hết hạn</th>
					<th scope="col">Trạng thái</th>
					<th scope="col">Loại</th>
					<th scope="col">Chi tiết</th>
				</tr>
			</thead>
			<tbody id="table_content">
				{{#each vouchers}}
				<tr>
					<td scope="row">{{this._id}}</td>
					<td>{{this.code}}</td>
					<td>{{this.remain}}</td>
					<td class="startDate">{{timeToString this.startDate}}</td>
					<td class="endDate">{{timeToString this.endDate}}</td>
					<td class="statusTable">{{this.status}}</td>
					<td class="type">{{this.type}}</td>
					<td>
                            <span
                                data-toggle="modal"
                                data-target="#settingDiscount"
                                data-id="{{this._id}}"
								data-startdate="{{this.startDate}}"
                                data-enddate="{{this.endDate}}"
								data-status="{{this.status}}"
								data-type="{{this.type}}"
								data-condition="{{this.condition}}"
                            ><i class="fa-solid fa-edit"></i></span>
                            <span
                                data-toggle="modal"
                                data-target="#confirmDeleteModal"
                                data-id={{this._id}}
                            ><i
                                    class="fa-solid fa-trash ml-1 d-inline text-secondary"
                                ></i></span>

                        </td>
        		</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>

<!-- Update Voucher -->
<div class="modal fade" id="settingDiscount" tabindex="-1" role="dialog" aria-labelledby="settingDiscountTitle"
	aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="settingDiscountTitle">Chỉnh sửa khuyến mãi</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body discount_modal">
				<form id="updateVoucherForm" method="post">
					<div class="col">
						<label class="name_label" for="dropdownStatus">Trạng thái</label>
						<br>
						<select class="btn dropdown-toggle" type="button" id="inputUpdateStatus" data-toggle="dropdown"
							aria-haspopup="true" aria-expanded="false" name="status">
							<option value="true">Hoạt động</a>
							<option value="false">Hết hạn</a>
						</select>
					</div>
						
					<div class="form-group row">
						<div class="col-6">
							<label class="name_label" for="InputBegin">Ngày bắt đầu</label>
							<input type="date" class="form-control" id="inputUpdateStartDate" name="startDate" placeholder="YYYY/mm/dd">
						</div>
						<div class="col-6">
							<label class="name_label" for="InputExpired">Ngày hết hạn</label>
							<input type="date" class="form-control" id="inputUpdateEndDate" name="endDate" placeholder="YYYY/mm/dd">
						</div>
					</div>
					<br>

					<div class="form-group row type_group">
						<div class="col-6">
							<label class="name_label" for="dropdownType">Loại khuyến mãi</label>
							<br>
							<select class="btn dropdown-toggle" type="button" id="dropdownType" data-toggle="dropdown"
								aria-haspopup="true" aria-expanded="false" name="">
								<option>Tiền cố định</option>
								<option>Phần trăm</option>
							</select>
						</div>
						<div class="col-6">
							<label class="name_label" for="Inputtype">Giá trị (loại)</label>
							<input type="text" class="form-control" id="inputUpdateType" name="type" placeholder="VND">
						</div>
					</div>
					<br>

					<div class="form-group row condition_group">
						<div class="col-6">
							<label class="name_label" for="dropdownCondition">Điều kiện</label>
							<br>
							<select class="btn dropdown-toggle" type="button" id="dropdownCondition" data-toggle="dropdown"
								aria-haspopup="true" aria-expanded="false" name="">
								<option>Mua trên</a>
								<option>Không có</a>
							</select>
						</div>
						<div class="col-6">
							<label class="name_label" for="InputCondition">Giá trị (điều kiện)</label>
							<input type="text" class="form-control" id="inputUpdateCondition" name="condition" placeholder="VND">
						</div>
					</div>
					<br>

					<div class="modal_footer">
						<button type="button" class="btn-outline" data-dismiss="modal">Hủy</button>
						<button type="submit" class="btn-defautl" id="updateVoucher">Xác nhận</button>
					</div>
				</form>
			</div>
			<div class="modal-footer">

			</div>
		</div>
	</div>
</div>

<!-- Create Voucher -->
