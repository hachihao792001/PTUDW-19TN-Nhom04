							<label class="name_label" for="dropdownCondition">Điều kiện</label>
							<br>
							<select class="btn dropdown-toggle" type="button" id="dropdownCondition" data-toggle="dropdown"
								aria-haspopup="true" aria-expanded="false" name="">
								<option>Mua trên</a>
								<option>Không có</a>
							</select>
						</div>
						<div class="col-6">
							<label class="name_label" for="InputCondition">Giá trị (điều kiện)</label>
							<input type="text" class="form-control" id="Condition" name="condition" placeholder="VND">
						</div>
					</div>
					<br>

					<div class="modal_footer">
						<button type="button" class="btn-outline" data-dismiss="modal">Hủy</button>
						<button type="submit" class="btn-default">Xác nhận</button>
					</div>
				</form>
			</div>
			<div class="modal-footer">

			</div>
		</div>
	</div>
</div>

<!--Confirm Delete Modal -->
<div
    class="modal fade"
    id="confirmDeleteModal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="modelTitleId"
    aria-hidden="true"
>
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa khuyến mãi</h5>
                <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                >
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Xác nhận xóa khuyến mãi này?
            </div>
            <div class="modal-footer">
                <button
                    id="btn-delete-voucher"
                    type="button"
                    class="btn btn-danger"
                >Xóa</button>
                <button
                    type="button"
                    class="btn-outline"
                    data-dismiss="modal"
                >Hủy</button>
            </div>
        </div>
    </div>
</div>
